<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div style="width:100%; height:100px; border:1px solid;">
        Logo
    </div>
    <div style="width:100%; height:100px; border:1px solid;">
        <ul style="list-style-type:none;">
            <li>
                <b>Xin chào: @Session["tendn"]</b>
            </li>
            <li>
                <a style="width:120px; height:70px; float:left;" href="@Url.Action("Index","Recipe")">Home</a>
            </li>
            @if(Session["tendn"] == null)
            {
                @Html.Action("DangKyPart", "TaiKhoan");
            }
            @if(Session["tendn"] != null)
            {
                @Html.Action("DangXuatPart", "TaiKhoan");
            }
            else
            {
                @Html.Action("DangNhapPart", "TaiKhoan");
            }
        </ul>
    </div>
    <div class="col-md-12" style="border:1px solid;">
        <div class="col-md-3">
            @Html.Action("AllWriterPart","Writer")
        </div>
        <div class="col-md-9" style="border: 1px solid;">
            @RenderBody()
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
